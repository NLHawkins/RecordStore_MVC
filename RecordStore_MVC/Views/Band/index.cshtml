
@{
    ViewBag.PageTitle = "Band";
}

<h2>Band List</h2>

@using (Html.BeginForm("Create", "Band"))
{
    <p>
        @Html.TextBox("Name", null, new { @class = "form-control", placeholder = "Band Name" })
    </p>
    <p>
        @Html.TextBox("Hometown", null, new { @class = "form-control", placeholder = "Band Hometown" })
    </p>
    <p>
        <input type="submit" class="btn btn-default" value="Create Band" />
    </p>
}

@foreach (var band in ViewBag.Bands)
{
    <div class="row">
        <div class="col-md-2">
            @band.Name
        </div>
        <div class="col-md-2">
            @band.Hometown
        </div>
    </div>
}




